<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    >


    <ImageView
        android:id="@+id/imageView_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/head" />

    <ImageView
        android:id="@+id/imageView_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_head"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/body" />

    <ImageView
        android:id="@+id/imageView_left_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_head"
        android:layout_toLeftOf="@id/imageView_body"
        android:layout_alignTop="@id/imageView_body"
        app:srcCompat="@drawable/hand" />

    <ImageView
        android:id="@+id/imageView_right_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_head"
        android:layout_toRightOf="@id/imageView_body"
        android:layout_alignTop="@id/imageView_body"
        app:srcCompat="@drawable/hand" />

    <ImageView
        android:id="@+id/imageView_left_leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_body"
        android:layout_marginLeft="140dp"
        app:srcCompat="@drawable/leg" />

    <ImageView
        android:id="@+id/imageView_right_leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_body"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/imageView_left_leg"
        app:srcCompat="@drawable/leg" />
</RelativeLayout>